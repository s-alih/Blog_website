<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs')  %> 
<body>
   <%- include('./partials/nav.ejs')  %> 
   
        <div class="blog_content">
           <p>All Blogs</p>
           <% if(blogs.length > 0){ %> 
             <% blogs.forEach((blog) =>{ %> 
               <a class="single" href="/blogs/<%= blog._id %> ">
                <h3><%= blog.title  %> </h3>
                <p><%= blog.snippet  %> </p>
               </a>
                <% } )%> 
             <% }else {%>
                <p>No blog added yet</p>
             <% } %>  
        </div>
        <%- include('./partials/footer.ejs')  %> 

    
</body>
</html>